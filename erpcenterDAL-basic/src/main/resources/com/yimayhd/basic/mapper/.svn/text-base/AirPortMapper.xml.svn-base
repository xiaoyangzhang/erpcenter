<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.yihg.air.dao.AirPortMapper">

  <resultMap id="BaseResultMap" type="com.yihg.air.po.AirPort">
    <id column="id" jdbcType="INTEGER" property="id" />
    <result column="city_code" jdbcType="CHAR" property="cityCode" />
    <result column="city_name" jdbcType="VARCHAR" property="cityName" />
    <result column="port_code" jdbcType="CHAR" property="portCode" />
    <result column="port_name" jdbcType="VARCHAR" property="portName" />
    <result column="port_introduction" jdbcType="VARCHAR" property="portIntroduction" />
    <result column="name_spell" jdbcType="VARCHAR" property="nameSpell" />
    <result column="important_level" jdbcType="VARCHAR" property="importantLevel" />
  </resultMap>
  
  <sql id="Base_Column_List">
    id, city_code, city_name, port_code, port_name, port_introduction, name_spell,important_level 
  </sql>

  <!-- 单条插入 -->
  <insert id="insert" parameterType="com.yihg.air.po.AirPort" useGeneratedKeys="true" keyProperty="id">
    insert into air_port
    <trim prefix="(" suffix=")" suffixOverrides=",">
      <if test="cityCode != null and cityCode != ''">
        city_code,
      </if>
      <if test="cityName != null  and cityName != ''">
        city_name,
      </if>
      <if test="portCode != null  and portCode != ''">
        port_code,
      </if>
      <if test="portName != null  and portName != ''">
        port_name,
      </if>
      <if test="portIntroduction != null and portIntroduction != ''">
        port_introduction,
      </if>
      <if test="nameSpell != null and nameSpell != ''">
        name_spell,
      </if>
      <if test="importantLevel != null and importantLevel != ''">
        important_level
      </if>
    </trim>
    <trim prefix="values (" suffix=")" suffixOverrides=",">
      <if test="cityCode != null and cityCode != ''">
        #{cityCode,jdbcType=CHAR},
      </if>
      <if test="cityName != null and cityName != ''">
        #{cityName,jdbcType=VARCHAR},
      </if>
      <if test="portCode != null and portCode != ''">
        #{portCode,jdbcType=CHAR},
      </if>
      <if test="portName != null and portName != ''">
        #{portName,jdbcType=VARCHAR},
      </if>
      <if test="portIntroduction != null and portIntroduction != ''">
        #{portIntroduction,jdbcType=VARCHAR},
      </if>
      <if test="nameSpell != null and nameSpell != ''">
        #{nameSpell,jdbcType=VARCHAR},
      </if>
      <if test="importantLevel != null and importantLevel != ''">
        #{importLevel,jdbcType=VARCHAR}
      </if>
    </trim>
  </insert>
  
  
  <!-- 单条记录更新  -->
  <update id="update" parameterType="com.yihg.air.po.AirPort" >
    update air_port
    <set>
      <if test="portCode != null and portCode != ''" >
        port_code = #{portCode},
      </if>
      <if test="portName != null and portName != ''" >
        port_Name = #{portName},
      </if>
      <if test="portIntroduction != null and portIntroduction != ''">
      	port_introduction = #{portIntroduction},
      </if>
      <if test="nameSpell != null and nameSpell != ''">
      	name_spell = #{nameSpell,jdbcType=VARCHAR},
      </if>
      <if test="importantLevel != null and importantLevel != ''">
      	important_level = #{importLevel,jdbcType=VARCHAR}
      </if>
    </set>
    where id = #{id,jdbcType=INTEGER}
  </update>
  
  <!-- selectByPrimaryKey -->
  <select id="selectByPrimaryKey" parameterType="java.lang.Integer" resultMap="BaseResultMap">
    select 
    <include refid="Base_Column_List" />
    from air_port
    where id = #{id,jdbcType=INTEGER}
  </select>
  
  <!-- 根据城市名字返回城市三字码 -->
  <select id="getCityCodeByCityName" parameterType="java.lang.String" resultType="java.lang.String">
  	select city_code from air_port where city_name = #{cityName}
  </select>
  
  
  <!-- 根据机场名称返回机场信息 -->
  <select id="getAirPortByPortName" parameterType="java.lang.String" resultMap="BaseResultMap">
  	select
  		<include refid="Base_Column_List" />
  	from air_port
  	where port_name like concat(#{portNmae},'%')
  </select>
  
  
  <!-- 根据用户输入的城市名字前缀或拼音前缀查询机场列表（固定返回10条） -->
  <select id="getFuzzySearchList" parameterType="java.lang.String" resultType="java.util.HashMap">
 	select 
 		CONCAT(city_name,'(',name_spell,')') label,city_name `value` 
 	from air_port 
	where 
		city_name like CONCAT('%',#{cityName},'%') 
	or 
		name_spell like CONCAT('%',#{cityName},'%') 
	or
		(#{cityName} is null or #{cityName=''})
	ORDER BY important_level DESC 
	LIMIT 10
  </select>
</mapper>